<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".Main2Activity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">

                <include
                    layout="@layout/games"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="30px"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="0dp">

                    <ImageButton
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/bluebutton"
                        android:onClick="call_motor"
                        android:src="@drawable/ic_brush" />

                    <ImageButton
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/purplebutton"
                        android:onClick="call_logico"
                        android:src="@drawable/ic_face_white" />

                    <ImageButton
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/red_light"
                        android:background="@drawable/bluebutton"
                        android:onClick="call_social"
                        android:src="@drawable/ic_chat" />

                    <ImageButton
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:layout_marginEnd="24dp"
                        android:backgroundTint="@color/green_light_alf"
                        android:background="@drawable/greenbutton"
                        android:onClick="call_alfabeto"
                        android:src="@drawable/ic_library_books_green" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/minkynice"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/text12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="Hora da diversÃ£o!"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/imageButton10"
                        android:fontFamily="@font/minkynice"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="40dp"
                        android:text="@string/game1_name"
                        android:onClick="call_game1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:backgroundTint="@color/green_light_alf"
                        android:background="@drawable/redbutton"/>

                    <TextView
                        android:id="@+id/imageButton13"
                        android:fontFamily="@font/minkynice"
                        android:onClick="call_game4"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="40dp"
                        android:text="@string/game4_name"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:backgroundTint="@color/red"
                        android:background="@drawable/redbutton"/>

                    <TextView
                        android:id="@+id/imageButton11"
                        android:fontFamily="@font/minkynice"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="40dp"
                        android:onClick="call_game2"
                        android:text="@string/game2_name"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:backgroundTint="@color/purple_light"
                        android:background="@drawable/redbutton"/>

                    <TextView
                        android:id="@+id/imageButton12"
                        android:fontFamily="@font/minkynice"
                        android:onClick="call_game3"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="40dp"
                        android:text="@string/game3_name"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:backgroundTint="@color/blue_light"
                        android:background="@drawable/redbutton"/>




                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </FrameLayout>
