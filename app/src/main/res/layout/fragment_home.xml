<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">

                <include
                    layout="@layout/games"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="0dp"
                    android:layout_marginBottom="30px">

                    <ImageButton
                        android:id="@+id/logica"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="20dp"
                        android:background="@drawable/bluebutton"
                        android:onClick="onClickHome"
                        android:src="@drawable/ic_brush" />

                    <ImageButton
                        android:id="@+id/motor"
                        android:layout_width="54dp"
                        android:layout_height="54dp"

                        android:layout_gravity="center_vertical"
                        android:layout_margin="20dp"
                        android:background="@drawable/purplebutton"
                        android:src="@drawable/ic_face_white"/>

                    <ImageButton
                        android:id="@+id/social"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="20dp"
                        android:background="@drawable/redbutton"
                        android:src="@drawable/ic_chat"/>

                    <ImageButton
                        android:id="@+id/alfabeto"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="20dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/greenbutton"
                        android:src="@drawable/ic_library_books"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/text12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="Hora da diversÃ£o!"
                        android:textSize="20sp"/>
                    <ImageButton
                        android:id="@+id/imageButton10"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/redbutton2"
                        android:src="@android:drawable/ic_menu_search" />

                    <ImageButton
                        android:id="@+id/imageButton9"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/redbutton"
                        android:src="@android:drawable/ic_menu_search" />

                    <ImageButton
                        android:id="@+id/imageButton11"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/redbutton2"
                        android:src="@android:drawable/ic_menu_search"/>

                    <ImageButton
                        android:id="@+id/imageButton5"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/redbutton2"
                        android:src="@android:drawable/ic_menu_search" />

                    <ImageButton
                        android:id="@+id/imageButton6"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/redbutton"
                        android:src="@android:drawable/ic_menu_search" />

                    <ImageButton
                        android:id="@+id/imageButton7"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="12dp"

                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/redbutton2"
                        android:src="@android:drawable/ic_menu_search" />

                    <ImageButton
                        android:id="@+id/imageButton8"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/redbutton"
                        android:src="@android:drawable/ic_menu_search"/>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </FrameLayout>

</LinearLayout>