<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Logico"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/text9"
        style="@style/Yellow_container"
        android:layout_width="363dp"
        android:layout_height="563dp"
        android:background="@drawable/bluelight_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text8"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="315dp"
        android:layout_height="554dp"
        android:layout_above="@+id/buttongame"
        android:layout_alignParentEnd="true"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="@string/motora1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/text9"
        app:layout_constraintEnd_toEndOf="@+id/text9"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="@+id/text9"
        app:layout_constraintTop_toTopOf="@+id/text9"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/text8"
        android:layout_width="275dp"
        android:layout_height="33dp"
        android:layout_above="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="RESPONSÁVEIS"
        android:textColor="@color/blue"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>