<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="26dp"
                android:layout_height="29dp"
                android:onClick="voltar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.025"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/arrow" />

            <TextView
                android:id="@+id/text7"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/minkynice"
                android:text="DADOS"
                android:textSize="36sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView15" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_marginTop="40dp"
                android:layout_width="345dp"
                android:layout_height="156dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                app:srcCompat="@drawable/dadosimg" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/text_tela_cadastro2"
                android:layout_width="319dp"
                android:layout_height="65dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/letters_learners"
                android:gravity="center_horizontal"
                android:text="@string/text_dados"
                android:textSize="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text7" />

            <View
                android:id="@+id/view"
                style="@style/ContainerComponents"
                android:layout_width="match_parent"
                android:layout_height="276dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_tela_cadastro2" />

            <EditText
                android:id="@+id/tLogin"
                style="@style/Edit_Text"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:drawableRight="@drawable/ic_user"
                android:ems="25"
                android:fontFamily="@font/letters_learners"
                android:hint="Email"
                android:inputType="textPersonName"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tSenha"
                app:layout_constraintEnd_toEndOf="@+id/view"
                app:layout_constraintHorizontal_bias="0.482"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/view" />

            <EditText
                android:id="@+id/tSenha"
                style="@style/Edit_Text"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:drawableRight="@drawable/ic_eye"
                android:ems="25"
                android:fontFamily="@font/letters_learners"
                android:hint="Senha"
                android:inputType="textPassword"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintEnd_toEndOf="@+id/view"
                app:layout_constraintHorizontal_bias="0.482"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/view"
                app:layout_constraintVertical_bias="0.53" />

            <Button
                android:id="@+id/btLogin"
                style="@style/Loginbt"
                android:layout_width="142dp"
                android:layout_height="58dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/gradient"
                android:fontFamily="@font/minkynice"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toBottomOf="@+id/tSenha"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/text_tela_cadastro"
                style="@style/Loginbt"
                android:layout_width="142dp"
                android:layout_height="58dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/gradient"
                android:fontFamily="@font/minkynice"
                android:onClick="cadastro"
                android:text="@string/text_cadastro"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintEnd_toEndOf="@+id/view"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/btLogin"
                app:layout_constraintTop_toBottomOf="@+id/tSenha"
                app:layout_constraintVertical_bias="0.2" />

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>